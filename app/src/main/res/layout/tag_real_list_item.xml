<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF2F2F2"
    android:orientation="horizontal">

    <View
        android:layout_width="7.5sp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

    <TextView
        android:id="@+id/id_text"
        android:layout_width="38sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1.5sp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <View
        android:layout_width="0.75sp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

    <TextView
        android:id="@+id/epc_text"
        android:layout_width="240sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1.5sp"
        android:singleLine="false"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <View
        android:layout_width="0.75dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

    <TextView
        android:id="@+id/pc_text"
        android:layout_width="55.5sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1.5sp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <View
        android:layout_width="0.75dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

    <TextView
        android:id="@+id/times_text"
        android:layout_width="61sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1.5sp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <View
        android:layout_width="0.75dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

    <TextView
        android:id="@+id/rssi_text"
        android:layout_width="63sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1.5sp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <View
        android:layout_width="0.75dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

    <TextView
        android:id="@+id/freq_text"
        android:layout_width="63.7sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="1.5sp"
        android:singleLine="true"
        android:textColor="#ff333333"
        android:textSize="12sp" />

    <View
        android:layout_width="0.75dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

</LinearLayout>